<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/padding_medium"
    tools:context=".main.albums.AlbumsMenuBottomSheetDialogFragment">

    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_sheet_round_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_x_large"
        android:paddingBottom="@dimen/padding_x_large">

        <Button
            android:id="@+id/play"
            style="@style/AppTheme.MenuButton"
            android:drawableEnd="@drawable/ic_play"
            android:text="@string/play" />

        <Button
            android:id="@+id/addToPlayList"
            style="@style/AppTheme.MenuButton"
            android:drawableEnd="@drawable/ic_add_playlist"
            android:text="@string/add_to_playlist" />

        <Button
            android:id="@+id/share"
            style="@style/AppTheme.MenuButton"
            android:drawableEnd="@drawable/ic_share"
            android:text="@string/share" />

    </LinearLayout>

</FrameLayout>